{
  "name": "building-real-user-interfaces-using-tailwind",
  "version": "1.0.0",
  "repository": "https://github.com/asvny/building-real-user-interfaces-using-tailwind.git",
  "author": "asvny <annamalai.saro@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:atlassian-css": "TAILWIND_CONFIG=atlassian postcss --config atlassian/postcss.config.js atlassian/atlassian.css -o atlassian/atlassian.min.css",
    "build:netlify-css": "TAILWIND_CONFIG=netlify postcss --config netlify/postcss.config.js netlify/netlify.css -o netlify/netlify.min.css",
    "build:shopify-css": "TAILWIND_CONFIG=shopify postcss --config shopify/postcss.config.js shopify/shopify.css -o shopify/shopify.min.css",
    "build:spotify-css": "TAILWIND_CONFIG=spotify postcss --config spotify/postcss.config.js spotify/spotify.css -o spotify/spotify.min.css"
  },
  "dependencies": {
    "tailwindcss": "^1.1.3"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.7.2",
    "cssnano": "^4.1.10",
    "postcss-cli": "^6.1.3"
  }
}
