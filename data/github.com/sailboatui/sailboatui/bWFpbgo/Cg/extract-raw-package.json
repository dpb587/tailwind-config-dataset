{
  "name": "sailboatui",
  "version": "0.1.1",
  "description": "A modern UI component library for Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:css": "NODE_ENV=development npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/sailboat.css --watch",
    "dev:hugo": "hugo server",
    "dev:open": "open http://127.0.0.1:1313/",
    "build": "npm-run-all build:*",
    "build:css": "NODE_ENV=production npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/sailboat.css --minify",
    "build:hugo": "hugo --minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sailboatui/sailboatui.git"
  },
  "keywords": [
    "sailboatui",
    "html",
    "css",
    "javascript",
    "tailwindcss",
    "tailwind components",
    "tailwind elements",
    "tailwind library",
    "tailwind sections",
    "tailwind css",
    "tailwind ui"
  ],
  "author": "lvwzhen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sailboatui/sailboatui/issues"
  },
  "homepage": "https://github.com/sailboatui/sailboatui#readme",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "npm-run-all": "^4.1.5",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.2.0"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.8",
    "prettier": "^2.8.0",
    "prettier-plugin-go-template": "^0.0.13"
  }
}
